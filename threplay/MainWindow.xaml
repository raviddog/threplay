<Window x:Class="threplay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:threplay"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
        Title="Touhou Replay Manager" MinHeight="720" MinWidth="960" Height="720" Width="960" BorderThickness="0"
        Keyboard.PreviewKeyDown="Window_PreviewKeyDown">
    <Grid>
        <Grid HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="65" Background="{DynamicResource MaterialDesignPaper}"
                Panel.ZIndex="1" x:Name="modeGameViewToggle" MouseLeave="ModeGameViewToggle_MouseLeave">
            <Grid.Effect>
                <DropShadowEffect/>
            </Grid.Effect>
            <ListView x:Name="modeGameSelector" Width="250" SelectedIndex="-1"
                    HorizontalAlignment="Left" VerticalAlignment="Stretch"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Disabled" IsTextSearchEnabled="False"
                    SelectionChanged="ModeGameSelector_SelectionChanged"
                    MouseEnter="ModeGameSelector_MouseEnter">
                <ListView.Effect>
                    <DropShadowEffect/>
                </ListView.Effect>
            </ListView>
        </Grid>
        <DockPanel>
            <Grid HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="75"/>
            <DockPanel Margin="15">
                <Grid DockPanel.Dock="Bottom">
                    <TextBox x:Name="iDirLive" GotFocus="IDirLive_GotFocus"  Text="click to browse for game exe" Margin="0,2,0,0" Height="28" HorizontalAlignment="Stretch" VerticalAlignment="Top" FontWeight="Normal"/>
                    <TextBox x:Name="iDirBackup" GotFocus="IDirBackup_GotFocus"  Text="click to browse for backup folder" Margin="0,38,0,0" Height="28" HorizontalAlignment="Stretch" VerticalAlignment="Top" FontWeight="Normal"/>
                    <Button x:Name="fnLaunchGame" Content="Launch Game" Click="FnLaunchGame_Click" Margin="0,76,0,0" IsEnabled="False" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Button x:Name="fnLaunchFolder" Content="Open Game Folder" Click="FnLaunchFolder_Click" Margin="125,76,0,0" IsEnabled="False" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                </Grid>
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" x:Name="oCurText" FontSize="24" Text="Test" HorizontalAlignment="Stretch"/>
                    <Grid DockPanel.Dock="Left">
                        <TextBlock Text="Current Replay Folder" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,32,0,0"/>
                        <ListView x:Name="oReplayLiveList" SelectionMode="Multiple" Margin="0,56,0,0" MinWidth="350" MinHeight="100">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Filename" Width="120" DisplayMemberBinding="{Binding Filename}" />
                                    <GridViewColumn Header="Filesize" Width="80" DisplayMemberBinding="{Binding Filesize}" />
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                    <Grid DockPanel.Dock="Right">
                        <TextBlock Text="Backup Replay Folder" Margin="15,32,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                        <ListView x:Name="oReplayBackupList" SelectionMode="Multiple" Margin="0,56,0,0" MinWidth="350" MinHeight="100">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Filename" Width="120" DisplayMemberBinding="{Binding Filename}" />
                                    <GridViewColumn Header="Filesize" Width="80" DisplayMemberBinding="{Binding Filesize}" />
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
                        <RadioButton x:Name="fnTypeMove" Content="Move" GroupName="transferType" Margin="2,0,2,2" HorizontalAlignment="Center" IsChecked="True" />
                        <RadioButton x:Name="fnTypeCopy" Content="Copy" GroupName="transferType" Margin="2,0,2,2" HorizontalAlignment="Center" Width="58"/>
                        <Button x:Name="fnTransferToLive" Content="&lt;- Restore" IsEnabled="False" Margin="2,4,2,2" Click="FnTransferToLive_Click"/>
                        <Button x:Name="fnTransferToBackup" Content="Backup -&gt;" IsEnabled="False" Margin="2,4,2,2" Click="FnTransferToBackup_Click"/>
                    </StackPanel>
                </DockPanel>
            </DockPanel>
        </DockPanel>
    </Grid>
</Window>
