<Window x:Class="threplay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:threplay"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
        Title="Touhou Replay Manager" MinHeight="720" MinWidth="960" Height="720" Width="960" BorderThickness="0"
        Keyboard.PreviewKeyDown="Window_PreviewKeyDown">
    <Grid>
        <Grid HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="65" Background="{DynamicResource MaterialDesignPaper}"
                Panel.ZIndex="1" x:Name="modeGameViewToggle" MouseLeave="ModeGameViewToggle_MouseLeave">
            <Grid.Effect>
                <DropShadowEffect/>
            </Grid.Effect>
            <ListView x:Name="modeGameSelector" Width="250"
                    HorizontalAlignment="Left" VerticalAlignment="Stretch"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Disabled" IsTextSearchEnabled="False"
                    SelectionChanged="ModeGameSelector_SelectionChanged"
                    MouseEnter="ModeGameSelector_MouseEnter">
                <ListView.Effect>
                    <DropShadowEffect/>
                </ListView.Effect>
            </ListView>
        </Grid>
        <DockPanel>
            <Grid HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="75"/>
            <DockPanel Margin="15">
                <Grid DockPanel.Dock="Bottom">
                    <TextBox x:Name="iDirLive" GotFocus="IDirLive_GotFocus"  Text="click to browse for game exe" Margin="0,2,0,0" Height="28" HorizontalAlignment="Stretch" VerticalAlignment="Top" FontWeight="Normal"/>
                    <TextBox x:Name="iDirBackup" GotFocus="IDirBackup_GotFocus"  Text="click to browse for backup folder" Margin="0,38,0,0" Height="28" HorizontalAlignment="Stretch" VerticalAlignment="Top" FontWeight="Normal"/>
                    <Button x:Name="fnLaunchGame" Content="Launch Game" Click="FnLaunchGame_Click" Margin="0,76,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                </Grid>
                <Grid>
                    <TextBlock x:Name="oCurText" FontSize="24" Text="Test"/>
                    <TextBlock Text="Current Replay Folder" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,32,0,0"/>
                    <TextBlock Text="Backup Replay Folder" Margin="0,32,150,0" HorizontalAlignment="Right" VerticalAlignment="Top"/>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
                        <RadioButton x:Name="fnTypeMove" Content="Move" GroupName="transferType" Margin="2,0,2,2" HorizontalAlignment="Center" IsChecked="True" />
                        <RadioButton x:Name="fnTypeCopy" Content="Copy" GroupName="transferType" Margin="2,0,2,2" HorizontalAlignment="Center" Width="58"/>
                        <Button x:Name="fnTransferToLive" Content="&lt;- Restore" Margin="2,4,2,2" Click="FnTransferToLive_Click"/>
                        <Button x:Name="fnTransferToBackup" Content="Backup -&gt;" Margin="2,4,2,2" Click="FnTransferToBackup_Click"/>
                    </StackPanel>
                    <ListView x:Name="oReplayLiveList" SelectionMode="Multiple" Margin="0,56,0,0" Width="300" MinHeight="100" HorizontalAlignment="Left">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Filename" Width="120" DisplayMemberBinding="{Binding Filename}" />
                                <GridViewColumn Header="Filesize" Width="80" DisplayMemberBinding="{Binding Filesize}" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <ListView x:Name="oReplayBackupList" SelectionMode="Multiple" Margin="0,56,0,0" Width="300" MinHeight="100" HorizontalAlignment="Right">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Filename" Width="120" DisplayMemberBinding="{Binding Filename}" />
                                <GridViewColumn Header="Filesize" Width="80" DisplayMemberBinding="{Binding Filesize}" />
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </DockPanel>
        </DockPanel>
    </Grid>
</Window>
